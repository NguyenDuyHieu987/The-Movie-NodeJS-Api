{
    "compilerOptions": {
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "target": "ESNext",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "lib": ["es6"],                     
      "sourceMap": true,
      "skipLibCheck": true,
      "strict": true,
      "allowJs": true,
      "rootDir": "./",
      "outDir": "build",
      "baseUrl": "src",
      "noImplicitAny": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "types": [
        "node",
      ],
      "paths": {
        "@/*": [
          "./*"
        ],
        "@types/*": [
          "types/*"
        ],
      }
    },
    "include": [
      "src",
      "src/*",
      "src/**/*",
      "src/**/*.d.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ],
    "ts-node": {
      "esm": true,  
      "require": ["tsconfig-paths/register"]
    }, 
    "plugins": [
      {
          "transform": "@zerollup/ts-transform-paths",
      }
    ]
}