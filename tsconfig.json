{
    "compilerOptions": {
      "forceConsistentCasingInFileNames": true,
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "NodeNext",
      "skipLibCheck": true,
      "strict": true,
      "allowJs": true,
      "baseUrl": "src",
      "noEmit": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "types": [
        "node",
      ],
      "paths": {
        "~": [
          "src"
        ],
        "~/*": [
          "src/*"
        ],
        "@": [
          "src"
        ],
        "@/*": [
          "src/*"
        ],
      }
    },
    "include": [
      "src",
      "src/*",
      "src/**/*"
    ],
}