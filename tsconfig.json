{
    "compilerOptions": {
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "target": "ESNext",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "sourceMap": true,
      "skipLibCheck": true,
      "strict": true,
      "allowJs": true,
      "rootDir": "./",
      "outDir": "dist",
      "baseUrl": "./src",
      "noEmit": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "types": [
        "node",
      ],
      "paths": {
        "~": [
          "D:/Ngon Ngu Kich Ban/The-Movie-NodeJS-Api/src"
        ],
        "~/*": [
          "D:/Ngon Ngu Kich Ban/The-Movie-NodeJS-Api/src/*"
        ],
        "@": [
          "D:/Ngon Ngu Kich Ban/The-Movie-NodeJS-Api/src"
        ],
        "@/*": [
          "D:/Ngon Ngu Kich Ban/The-Movie-NodeJS-Api/src/*"
        ],
      }
    },
    "include": [
      "src",
      "src/*",
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ],
    "ts-node": {
      "esm": true,  
    }, 
}